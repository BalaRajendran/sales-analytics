# Application
PROJECT_NAME="Sales Dashboard API"
VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# API
API_V1_PREFIX=/api/v1

# CORS - Add your frontend URLs here
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
DATABASE_URL=sqlite+aiosqlite:///./sales_dashboard.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/sales_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BULK_OPERATIONS=5
