# Application
PROJECT_NAME="Sales Dashboard API"
VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# API
API_V1_PREFIX=/api/v1

# CORS - Add your frontend URLs here
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
DATABASE_URL=postgresql+asyncpg://shopx_user:shopx_password@localhost:5432/shopx_analytics
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis
# For Docker: use redis:6379, For local development: use localhost:6379
REDIS_URL=redis://:changeme@redis:6379/0
REDIS_PASSWORD=changeme
REDIS_MAX_CONNECTIONS=50

# GraphQL
GRAPHQL_DEBUG=true
GRAPHQL_MAX_DEPTH=10
GRAPHQL_MAX_COMPLEXITY=1000
GRAPHQL_ENABLE_PLAYGROUND=true

# Celery (Background Tasks)
# For Docker: use redis:6379, For local development: use localhost:6379
CELERY_BROKER_URL=redis://:changeme@redis:6379/1
CELERY_RESULT_BACKEND=redis://:changeme@redis:6379/2

# Cache TTL (seconds)
CACHE_TTL_DASHBOARD=60
CACHE_TTL_PRODUCTS=300
CACHE_TTL_CUSTOMERS=600
CACHE_TTL_TRENDS=180
CACHE_TTL_REALTIME=30

# Performance
ENABLE_COMPRESSION=true
ENABLE_QUERY_LOGGING=false
COMPRESSION_MINIMUM_SIZE=1000
COMPRESSION_LEVEL=6

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# Security
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BULK_OPERATIONS=5
